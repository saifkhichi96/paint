<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryLight"
    android:orientation="vertical"
    android:theme="@style/AppTheme.Light"
    tools:context="sfllhkhan95.doodle.auth.SettingsActivity">

    <!-- Header -->
    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:elevation="4dp"
        tools:targetApi="lollipop">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_toLeftOf="@+id/avatarCard"
            android:layout_toStartOf="@+id/avatarCard"
            android:background="@color/colorPrimaryDark"
            android:theme="@style/AppTheme"
            tools:targetApi="lollipop" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="?actionBarSize"
            android:layout_marginStart="?actionBarSize"
            android:orientation="vertical"
            android:paddingEnd="@dimen/activity_horizontal_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingStart="@dimen/activity_horizontal_margin"
            android:visibility="gone">

            <TextView
                android:id="@+id/headline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="@string/placeholder_fullname"
                android:textColor="@color/colorWhite"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="@string/placeholder_email"
                android:textColor="@color/colorWhite"
                android:textSize="12sp" />

        </LinearLayout>

        <android.support.v7.widget.CardView
            android:id="@+id/avatarCard"
            android:layout_width="?actionBarSize"
            android:layout_height="?actionBarSize"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:innerRadius="0dp"
            android:shape="ring"
            android:thicknessRatio="1.0"
            app:cardBackgroundColor="@color/colorPrimaryLight"
            app:cardCornerRadius="10dp">

            <ImageView
                android:id="@+id/userAvatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/desc_avatar"
                android:scaleType="centerCrop"
                android:src="@drawable/avatar_placeholder" />

        </android.support.v7.widget.CardView>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryLight"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="80dp">

            <!-- Social -->
            <LinearLayout
                android:id="@+id/socialSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <!-- Section Break -->
                <RelativeLayout
                    android:id="@+id/socialSectionHeading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginTop="@dimen/activity_vertical_margin">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_centerVertical="true"
                        android:background="@color/colorSectionBreak" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@color/colorPrimaryLight"
                        android:fontFamily="monospace"
                        android:padding="10dp"
                        android:text="@string/section_social"
                        android:textAllCaps="true"
                        android:textColor="@color/colorSectionHeading"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        tools:ignore="SmallSp" />

                </RelativeLayout>

                <!-- Login Button -->
                <com.facebook.login.widget.LoginButton
                    android:id="@+id/loginButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:textColor="#FFF"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/facebookConnectButton"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/com_facebook_blue"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:theme="@style/AppTheme">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/com_facebook_button_login_logo" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:text="Facebook"
                        android:textColor="@color/colorWhite"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/facebookConnectionStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/activity_horizontal_margin"
                        android:layout_marginStart="@dimen/activity_horizontal_margin"
                        android:gravity="end"
                        android:text="Not Connected"
                        android:textSize="14sp" />

                </LinearLayout>

            </LinearLayout>

            <!-- Backup and Restore -->
            <LinearLayout
                android:id="@+id/backupSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:orientation="vertical">

                <!-- Section Break -->
                <RelativeLayout
                    android:id="@+id/backupSectionHeading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginTop="@dimen/activity_vertical_margin">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_centerVertical="true"
                        android:background="@color/colorSectionBreak" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@color/colorPrimaryLight"
                        android:fontFamily="monospace"
                        android:padding="10dp"
                        android:text="@string/section_backup"
                        android:textAllCaps="true"
                        android:textColor="@color/colorSectionHeading"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        tools:ignore="SmallSp" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/backupSectionInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:gravity="center"
                    android:text="@string/desc_backup"
                    android:textColor="@color/colorAccent" />

                <LinearLayout
                    android:id="@+id/backupSectionBody"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingTop="10dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="2dp"
                                android:text="@string/label_backup_date"
                                android:textAllCaps="true"
                                android:textColor="@color/colorAccentLight"
                                android:textSize="11sp"
                                tools:ignore="SmallSp" />

                            <TextView
                                android:id="@+id/lastBackupDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="2dp"
                                android:text="@string/placeholder_backup_date"
                                android:textAllCaps="true"
                                android:textColor="@color/colorAccent"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="2dp"
                                android:text="@string/label_backup_size"
                                android:textAllCaps="true"
                                android:textColor="@color/colorAccentLight"
                                android:textSize="11sp"
                                tools:ignore="SmallSp" />

                            <TextView
                                android:id="@+id/lastBackupSize"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="2dp"
                                android:text="@string/placeholder_backup_size"
                                android:textAllCaps="true"
                                android:textColor="@color/colorAccent"
                                android:textSize="12sp"
                                android:textStyle="bold" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <Button
                            android:id="@+id/backup_button"
                            android:layout_width="100dp"
                            android:layout_height="30dp"
                            android:layout_marginBottom="10dp"
                            android:text="@string/label_backup"
                            android:textColor="@color/colorBlack" />

                        <Button
                            android:id="@+id/restore_button"
                            android:layout_width="100dp"
                            android:layout_height="30dp"
                            android:text="@string/label_restore"
                            android:textColor="@color/colorBlack" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Personalization -->
            <LinearLayout
                android:id="@+id/personalizeSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:orientation="vertical">

                <!-- Section Break -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginTop="@dimen/activity_vertical_margin">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_centerVertical="true"
                        android:background="@color/colorSectionBreak" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@color/colorPrimaryLight"
                        android:fontFamily="monospace"
                        android:padding="10dp"
                        android:text="Personalise"
                        android:textAllCaps="true"
                        android:textColor="@color/colorSectionHeading"
                        android:textSize="11sp"
                        android:textStyle="bold" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorSectionBreak"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginBottom="1dp"
                        android:background="#FFF"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp">

                        <android.support.v7.widget.AppCompatButton
                            android:layout_width="match_parent"
                            android:layout_height="35dp"
                            android:layout_toLeftOf="@id/notification_switch"
                            android:background="#0000"
                            android:gravity="start|center_vertical"
                            android:text="Push Notifications"
                            android:textAllCaps="false" />

                        <Switch
                            android:id="@+id/notification_switch"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:background="#0000" />

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- About -->
            <LinearLayout
                android:id="@+id/aboutSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:orientation="vertical">

                <!-- Section Break -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginTop="@dimen/activity_vertical_margin">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_centerVertical="true"
                        android:background="@color/colorSectionBreak" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@color/colorPrimaryLight"
                        android:fontFamily="monospace"
                        android:padding="10dp"
                        android:text="@string/section_about"
                        android:textAllCaps="true"
                        android:textColor="@color/colorSectionHeading"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        tools:ignore="SmallSp" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorSectionBreak"
                    android:orientation="vertical">

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/privacy_policy"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginBottom="1dp"
                        android:background="#FFF"
                        android:drawableEnd="@drawable/ic_action_more"
                        android:drawableRight="@drawable/ic_action_more"
                        android:gravity="start|center_vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="See Privacy Policy"
                        android:textAllCaps="false" />

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/faqs"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginBottom="1dp"
                        android:background="#FFF"
                        android:drawableEnd="@drawable/ic_action_more"
                        android:drawableRight="@drawable/ic_action_more"
                        android:gravity="start|center_vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="Get Help"
                        android:textAllCaps="false" />

                    <android.support.v7.widget.AppCompatButton
                        android:id="@+id/about_developer"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_marginBottom="1dp"
                        android:background="#FFF"
                        android:drawableEnd="@drawable/ic_action_link"
                        android:drawableRight="@drawable/ic_action_link"
                        android:gravity="start|center_vertical"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="Support Us"
                        android:textAllCaps="false" />

                </LinearLayout>

            </LinearLayout>

            <!-- Account Details -->
            <LinearLayout
                android:id="@+id/statsSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:orientation="vertical">

                <!-- Section Break -->
                <RelativeLayout
                    android:id="@+id/statsSectionHeading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_vertical_margin"
                    android:layout_marginTop="@dimen/activity_vertical_margin">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_centerVertical="true"
                        android:background="@color/colorSectionBreak" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@color/colorPrimaryLight"
                        android:fontFamily="monospace"
                        android:padding="10dp"
                        android:text="@string/section_stats"
                        android:textAllCaps="true"
                        android:textColor="@color/colorSectionHeading"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        tools:ignore="SmallSp" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="@string/label_signin_date"
                        android:textAllCaps="true"
                        android:textColor="@color/colorAccentLight"
                        android:textSize="11sp"
                        tools:ignore="SmallSp" />

                    <TextView
                        android:id="@+id/lastLoginDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="@string/placeholder_signin_date"
                        android:textAllCaps="true"
                        android:textColor="@color/colorAccent"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="@string/label_signup_date"
                        android:textAllCaps="true"
                        android:textColor="@color/colorAccentLight"
                        android:textSize="11sp"
                        tools:ignore="SmallSp" />

                    <TextView
                        android:id="@+id/userSince"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="2dp"
                        android:text="@string/placeholder_signup_date"
                        android:textAllCaps="true"
                        android:textColor="@color/colorAccent"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>