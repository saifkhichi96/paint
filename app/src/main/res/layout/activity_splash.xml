<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="?attr/colorPrimaryDark"
              android:orientation="vertical"
              android:weightSum="3"
              tools:context=".views.activity.LaunchScreen">

  <Space
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"/>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:orientation="horizontal"
      android:weightSum="3">

    <Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

      <TextView
          android:id="@+id/appVersion"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentBottom="true"
          android:layout_centerHorizontal="true"
          android:fontFamily="sans-serif-condensed"
          android:text="@string/app_version"
          android:textAllCaps="true"
          android:textColor="@android:color/secondary_text_dark"
          android:textSize="10sp"
          android:textStyle="bold"
          tools:ignore="SmallSp"/>

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_above="@id/appVersion"
          android:layout_centerHorizontal="true"
          android:layout_marginTop="5dp"
          android:fontFamily="sans-serif"
          android:text="@string/app_name"
          android:textAllCaps="true"
          android:textColor="@android:color/primary_text_dark"
          android:textSize="12sp"
          android:textStyle="bold"/>

      <ImageView
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_above="@id/appVersion"
          android:contentDescription="@string/label_save_and_close"
          android:padding="10dp"
          android:scaleType="fitCenter"
          android:tint="@android:color/primary_text_dark"
          app:srcCompat="@drawable/paintbrush"/>

    </RelativeLayout>

    <Space
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"/>


  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
      android:layout_weight="1"
      android:gravity="center_horizontal|bottom"
      android:layoutDirection="locale"
      android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/company_name_prefix"
        android:textColor="@android:color/primary_text_dark"
        android:textAllCaps="true"
        android:textSize="12sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:fontFamily="cursive"
        android:text="@string/company_name"
        android:textColor="@android:color/primary_text_dark"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-condensed"
        android:text="@string/company_name_suffix"
        android:textAllCaps="true"
        android:textColor="@android:color/primary_text_dark"
        android:textSize="12sp"/>

  </LinearLayout>

</LinearLayout>